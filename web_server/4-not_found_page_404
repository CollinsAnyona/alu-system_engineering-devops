#!/bin/bash

# Update package lists
apt-get update

# Install nginx
apt-get install -y nginx

# Create a custom 404 error page
echo "<!DOCTYPE html>
<html lang=\"en\">
<head>
    <meta charset=\"UTF-8\">
    <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">
    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">
    <title>404 Not Found</title>
</head>
<body>
    <h1>Ceci n'est pas une page</h1>
</body>
</html>" > /var/www/html/404.html

# Update Nginx configuration to use the custom error page for 404 errors
sed -i '/^        location \/ {/a \
        error_page 404 /404.html;' /etc/nginx/sites-available/default

# Restart nginx
/etc/init.d/nginx reload

# Verify if the custom 404 page returns the correct content
status_code=$(curl -s -o /dev/null -w "%{http_code}" http://localhost/xyz)
if [ "$status_code" -eq 404 ]; then
    content=$(curl -s http://localhost/xyz)
    if [[ "$content" == *"Ceci n'est pas une page"* ]]; then
        echo "Custom 404 page returns the correct content."
    else
        echo "Error: Custom 404 page does not contain the correct content."
    fi
else
    echo "Error: Custom 404 page is not returned correctly (HTTP status code: $status_code)."
fi
